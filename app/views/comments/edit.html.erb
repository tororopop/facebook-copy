
<div class="col-xs-12 col-sm-6 col-sm-offset-3">

  <div class="row" style="background-color:#fafafa; border-radius: 0.3em; padding: 10px 10px 10px 10px; margin-bottom: 20px;">

    <h2 style="text-align:center; border-bottom:#DCDCDC 1px solid;">
      コメントの編集
    </h2>

    <%= form_for(@comment, url: topic_comment_path) do |f| %>

    <%= f.label :内容 %>
    <%= f.text_field :content, class: 'form-control' %>
    <br>
    <%= f.submit '編集する', class: 'btn btn-primary btn-block' %>
    <% end %>

    <div style="text-align:center;">
    <%= link_to "詳細画面にもどる", topic_path(@topic) %>
    </div>

  </div>
</div>
