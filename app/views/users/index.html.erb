<div class="row">
  <h2>知り合いかも(ユーザー一覧)</h2>

  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 " style="margin-top: 10px; border-right:#DCDCDC 1px solid;">
        <%= link_to user_path(user) do %>
          <%= profile_img_users(user) %>
          <div></div>
          <%= user.name %>
        <% end %>

        <% if user.id != current_user.id %>

          <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>

          <div class="btn btn-default">
            <%= link_to '新しいメッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
          </div>

        <% end %>
      </div>
  <% end %>
</div>

<div class="row" style="text-align: center;">
  <%= paginate @users %>
</div>
